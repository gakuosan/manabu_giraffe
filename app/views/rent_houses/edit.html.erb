<h1>物件編集</h1>

<%= render 'form', rent_house: @rent_house %>

<%= link_to '編集', @rent_house %> |
<%= link_to '戻る', rent_houses_path %>

<%= form_for @rent_house , url: rent_houses_path do |f| %>
  <div class="form-control">
    <%= f.label :home_name, "物件名" %><br />
    <%= f.text_field :home_name %>
  </div>

  <div class="form-control">
    <%= f.label :rent, "賃料" %><br />
    <%= f.text_field :rent %>円
  </div>

  <div class="form-control">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address %>
  </div>

  <div class="form-control">
    <%= f.label :age, "築年数" %><br />
    <%= f.text_field :age %>年
  </div>

  <div class="form-control">
    <%= f.label :note, "備考" %><br />
    <%= f.text_area :note %>
  </div>
  <hr />

  <h3>最寄り駅1</h3>
    <%= f.fields_for :stations do |st| %>
      <div class="form-control">
        <%= st.label :lail_way, "路線名" %><br />
        <%= st.text_field :lail_way %>
      </div>

  <h3>最寄り駅2</h3>
    <%= f.fields_for :stations do |st| %>
      <div class="form-control">
         <%= st.label :lale_way, "路線名" %><br />
            <%= st.text_field :lale_way %>
          </div>



      <div class="form-control">
        <%= st.label :station, "駅名" %><br />
        <%= st.text_field :station %>
      </div>
      <div class="form-control">
        <%= st.label :walking_time, "徒歩分数" %><br />
        <%= st.text_field :walking_time %>分
      </div>
    <% end %>
  <% end %>

<%= link_to '編集', edit_rent_house_path(@rent_house) %> |
<%= link_to '戻る', rent_house_path %>
